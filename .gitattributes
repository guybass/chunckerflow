# Set default behavior to automatically normalize line endings
* text=auto

# Python files
*.py text eol=lf
*.pyi text eol=lf
*.pyx text eol=lf

# Configuration files
*.yml text eol=lf
*.yaml text eol=lf
*.toml text eol=lf
*.ini text eol=lf
*.cfg text eol=lf
*.json text eol=lf

# Documentation
*.md text eol=lf
*.rst text eol=lf
*.txt text eol=lf

# Shell scripts
*.sh text eol=lf
*.bash text eol=lf

# Docker
Dockerfile text eol=lf
docker-compose*.yml text eol=lf

# Git
.gitignore text eol=lf
.gitattributes text eol=lf

